# Environment Configuration
APP_ENV=development
SQLX_OFFLINE=true

# Database Configuration
DATABASE_URL=postgres://user:password@localhost/mydb
DATABASE_MAX_CONNECTIONS=10
DATABASE_CONNECTION_TIMEOUT=30
DATABASE_ENABLE_QUERY_LOGGING=true
DATABASE_ENABLE_SLOW_QUERY_WARNING=true
DATABASE_SLOW_QUERY_THRESHOLD_MS=100

# Filter Configuration
FILTER_ALLOW_RAW_SQL=false
FILTER_MAX_LIMIT=100
FILTER_MAX_NESTED_DEPTH=5
FILTER_ENABLE_QUERY_CACHE=true
FILTER_DEBUG_LOGGING=false

# API Configuration
API_ENABLE_RATE_LIMITING=true
API_RATE_LIMIT_REQUESTS=60
API_RATE_LIMIT_WINDOW_SECS=60
API_ENABLE_REQUEST_LOGGING=true
API_ENABLE_RESPONSE_COMPRESSION=true
API_MAX_REQUEST_SIZE_BYTES=2097152

# Security Configuration
SECURITY_ENABLE_CORS=true
SECURITY_CORS_ORIGINS=http://localhost:3000,http://localhost:5173
SECURITY_REQUIRE_HTTPS=false
SECURITY_ENABLE_AUDIT_LOGGING=true
SECURITY_JWT_EXPIRY_HOURS=24
SECURITY_JWT_SECRET=your-secret-key-here

# Monk-specific Configuration
MONK_TENANT_DB=tenant_db_name
MONK_API_PORT=3000
